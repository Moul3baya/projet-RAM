<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.16">

        <Button
            android:id="@+id/gallery"
            android:textAlignment="textStart"
            android:text="     gallery"
            android:drawableStart="@drawable/ic_collections_24dp"
            android:paddingLeft="5dp"
            android:textSize="38px"
            android:layout_weight="0.75"

            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="100dp"
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:onClick="onButtonGaleryClick"/>

        <Button
            android:id="@+id/camera"
            android:textAlignment="center"
            android:text="camera"
            android:drawableStart="@drawable/ic_photo_camera_24dp"
            android:textStyle="normal|bold"
            android:paddingLeft="5dp"
            android:textSize="38px"
            android:layout_height="100dp"
            android:layout_width="180dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="20dp"
            android:onClick="onButtonCameraClick"/>

        <TextView
            android:text="Bienvenue dans notre application de traitement d'image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text=" Rémi MOMPRIVÉ, Antoine BARRIERE et Maxime GUILBAULT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:id="@+id/textview2"
            android:textStyle="normal|italic"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/textView"
            android:textAllCaps="false" />

    </RelativeLayout>

</LinearLayout>